@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Login on MySpendings</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Login"></label>
            <input asp-for="Login" class="form-control"/>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <div class="text-center">
                <a asp-action="Register" asp-controller="Account" class="text-info">I don't have account</a>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}