@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create new Category
            </a>
        </div>
    </div>

    <br/>

    <table id="categoriesDataTable" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Name </th>
                <th class="text-center"> Description </th>
                <th class="text-center"> Priority </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/categories.js"></script>
}